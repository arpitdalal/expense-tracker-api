{
  "name": "expense-tracker-api",
  "version": "1.0.0",
  "description": "Expense tracking api",
  "main": "dist/index.js",
  "author": "Arpit Dalal <arpit@arpitdalal.dev> (https://github.com/arpitdalal)",
  "scripts": {
    "start": "node dist/index.js",
    "build": "ts-node build.ts && npx tsc",
    "dev": "nodemon server/index.ts | pino-pretty",
    "dev:debug": "nodemon --exec \"node -r ts-node/register --inspect-brk\" server/index.ts | pino-pretty",
    "lint": "eslint -c .eslintrc.js \"{server, test}/**/*.{js,ts,tsx}\" --quiet",
    "lint:fix": "eslint -c .eslintrc.js \"{server, test}/**/*.{js,ts,tsx}\" --quiet --fix",
    "test": "mocha --timeout=10000 -r ts-node/register test/**/*.ts --exit",
    "test:debug": "mocha --timeout=10000 -r ts-node/register --inspect-brk test/**/*.ts --exit",
    "husky-prepare": "husky install",
    "pre-commit": "npm run lint:fix && git add .",
    "pre-push": "npm run test"
  },
  "engines": {
    "node": "14.x",
    "npm": "7.x"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.12.11",
    "google-spreadsheet": "^3.1.15",
    "pino": "^6.11.3",
    "pino-multi-stream": "^5.3.0",
    "pino-pretty": "^7.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.12",
    "@types/google-spreadsheet": "^3.1.5",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.6.1",
    "@types/pino": "^6.3.8",
    "@types/pino-multi-stream": "^5.1.2",
    "@types/shelljs": "^0.8.8",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "chai": "^4.3.4",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.2",
    "mocha": "^8.4.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "shelljs": "^0.8.4",
    "supertest": "^6.1.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.4.3"
  }
}
